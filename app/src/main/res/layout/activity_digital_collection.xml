<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Título de la Colección Digital -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colección Digital"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Botón para Abrir Sobres -->
    <Button
        android:id="@+id/openPackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir Sobre"
        android:layout_marginBottom="16dp" />

    <!-- Lista para mostrar las cartas digitales -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aquí se mostrarán las cartas obtenidas"
        android:gravity="center" />
</LinearLayout>
